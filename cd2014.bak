          <tr>
            <td colspan="2"><a href="kelis5.htm">Kelis / Food</a><img src="biz3_b3h.GIF" width="20" height="20" border="0"><img src="biz3_b3h.GIF" width="20" height="20" border="0"><img src="biz3_b3h.GIF" width="20" height="20" border="0"><img src="biz3_b3h.GIF" width="20" height="20" border="0"><img src="biz3_b3l.gif" width="15" height="15" border="0"></td>
